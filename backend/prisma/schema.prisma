generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  passwordHash String
  role         Role      @default(USER)
  createdAt    DateTime  @default(now())
  isVerified   Boolean   @default(false)
  otp          String?
  otpExpires   DateTime?
  reports      Report[]
}

model Report {
  id            String          @id @default(uuid())
  userId        String
  description   String
  status        ReportStatus    @default(DRAFT)
  createdAt     DateTime        @default(now())
  aiAnalysis    AIAnalysis?
  complaint     Complaint?
  mediaEvidence    MediaEvidence[]
  internalNotes    CaseNote[]
  auditLogs        AuditLog[]
  user             User            @relation(fields: [userId], references: [id])
  
  // New NGO->User Communication Fields
  officialResponse String?         // Verification message (e.g., "We will help you...")
  supportContact   String?         // NGO Contact Number
  rejectionDetails String?         // Why it was rejected
}

model CaseNote {
  id        String   @id @default(uuid())
  reportId  String
  authorId  String
  content   String
  createdAt DateTime @default(now())
  report    Report   @relation(fields: [reportId], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  reportId   String?
  userId     String
  action     String   // e.g., "LOGIN", "VIEW_EVIDENCE", "STATUS_CHANGE"
  details    String?
  timestamp  DateTime @default(now())
  report     Report?  @relation(fields: [reportId], references: [id])
}

model Complaint {
  id           String   @id @default(uuid())
  reportId     String   @unique
  content      String
  suggestedLaw String?
  pdfPath      String?
  createdAt    DateTime @default(now())
  report       Report   @relation(fields: [reportId], references: [id])
}

model MediaEvidence {
  id           String    @id @default(uuid())
  reportId     String?
  filePath     String
  fileHash     String
  fileType     MediaType
  encryptionIv String?   // Added for secure decryption
  uploadedAt   DateTime  @default(now())
  description  String?
  metadata     String?
  report       Report?   @relation(fields: [reportId], references: [id])
}

model AIAnalysis {
  id              String   @id @default(uuid())
  reportId        String   @unique
  analysisText    String
  confidenceScore Float
  createdAt       DateTime @default(now())
  report          Report   @relation(fields: [reportId], references: [id])
}

enum Role {
  USER
  ADMIN
  NGO_ADMIN
  CASE_OFFICER
}

enum ReportStatus {
  DRAFT
  SUBMITTED
  UNDER_REVIEW
  VERIFIED
  VALID
  NEEDS_CLARIFICATION
  ESCALATED
  RESOLVED
}

enum MediaType {
  IMAGE
  VIDEO
}
